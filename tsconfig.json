{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/utils/*": ["src/utils/*"],
      "~/embeddings/*": ["src/embeddings/*"],
      "~/agent/*": ["src/agent/*"]
    }
  },
  "include": [
    "src/**/*",
    "package.json"
  ]
}
